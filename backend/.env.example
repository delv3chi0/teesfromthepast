# Environment Configuration Template
# Copy to .env and configure your values

# Required: JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
MONGO_URI=mongodb://localhost:27017/teesfromthepast

# Environment
NODE_ENV=development

# Optional: JWT Security (Phase 1 Quick Wins)
JWT_ISSUER=https://yourdomain.com
JWT_AUDIENCE=teesfromthepast-app
REQUIRE_JWT_CLAIMS=0

# Optional: Logging Configuration (Phase 1 Quick Wins)
LOG_LEVEL=info
LOG_PRETTY=1

# Optional: Graceful Shutdown (Phase 1 Quick Wins)
SHUTDOWN_TIMEOUT_MS=10000

# Optional: Version Information
GIT_SHA=

# Optional: External Services
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
RESEND_API_KEY=
RESEND_FROM=noreply@yourdomain.com
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PRINTFUL_TOKEN=