# Sample Environment Variables Configuration
# Copy this file to .env and update with your actual values

# ===== CORE APPLICATION =====
NODE_ENV=development
PORT=5000

# ===== DATABASE =====
# Replace with your MongoDB connection string
MONGO_URI=mongodb://localhost:27017/teesfromthepast

# ===== AUTHENTICATION & SECURITY =====
# Generate a secure random string of at least 32 characters
JWT_SECRET=your-super-secure-jwt-secret-key-here-at-least-32-chars
# JWT token TTL settings
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d
# Enable two-factor authentication features
ENABLE_2FA=false

# ===== STRIPE INTEGRATION =====
# Get these from your Stripe dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===== REDIS (OPTIONAL) =====
# For caching and rate limiting - if not provided, in-memory fallback is used
REDIS_URL=redis://localhost:6379

# ===== CLOUDINARY =====
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===== RATE LIMITING =====
# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# ===== LOGGING =====
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# ===== FEATURE FLAGS (OPTIONAL) =====
# Path to feature flags configuration file
FEATURE_FLAG_FILE=./config/feature-flags.json

# ===== JOB QUEUE (OPTIONAL) =====
# Enable job testing endpoints for development
ENABLE_JOB_TESTING=false

# ===== ERROR MONITORING (OPTIONAL) =====
# Sentry DSN for error tracking and monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# ===== OPENTELEMETRY (OPTIONAL) =====
# OpenTelemetry collector endpoint for traces/metrics
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# ===== APPLICATION LIMITS =====
# JSON body size limit in MB
JSON_LIMIT_MB=25
# Maximum print file size in MB
PRINTFILE_MAX_MB=22
# Cloudinary image size limit in MB
CLOUDINARY_IMAGE_MAX_MB=10

# ===== DATABASE PERFORMANCE =====
# Threshold for slow query logging in milliseconds
DB_SLOW_MS=1000

# ===== EMAIL (OPTIONAL) =====
# Resend API key for email notifications
RESEND_API_KEY=your_resend_api_key_here

# ===== DEVELOPMENT HELPERS =====
# Database name for tests (optional)
TEST_DB_NAME=teesfromthepast_test